<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_x_pos_report">
        <t t-set="company" t-value="env.company"/>
        <t t-call="web.html_container">
            <div class="page" style="page-break:unset !important;page-break-inside: unset !important;">
                <div class="report_header" style="text-align: center;">
                    <strong>
                        <h4>THE GOOD MEAT</h4>
                    </strong>

                    <p style="font-size: 10px;">
                        <t t-esc="company.name"/>
                        <br/>
                        <t t-esc="company.street"/>
                        <t t-esc="company.street2"/>
                        <t t-esc="company.city"/>
                        <br/>
                    </p>
                    <t t-if="company.vat">
                        <p style="font-size: 10px;">VAT Reg TIN:
                            <t t-esc="company.vat"/>
                        </p>
                    </t>
                    <p style="font-size: 10px;">
                        <t t-esc="session_name"/>
                    </p>
                    <p style="font-size: 10px;">======================================</p>
                    <p style="font-size: 10px;">CASHIER READING OF TERMINAL 01</p>
                    <p style="font-size: 10px;">======================================</p>
                </div>
                <div class="report_body" style="margin-top: 30px;">
                    <table style="width: 100%;">
                        <tr>
                            <td>
                                <div class="left_content" style="text-align: left;font-size: 15px;">
                                    <p>OPEN CASHIER:
                                        <t t-esc="user_id.name"/>
                                    </p>
                                </div>
                            </td>
                            <td>
                                <div class="right_content" style="text-align: right;font-size: 15px;">
                                    <p>
                                        <span t-esc="start_at"/>
                                    </p>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <div class="left_content" style="text-align: left;font-size: 15px;">
                                    <p>TRANS NO(s):
                                        <t t-esc="start_order_id"/>
                                        -
                                        <t t-esc="end_order_id"/>
                                    </p>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <div class="left_content" style="text-align: left;font-size: 15px;">
                                    <p>OPEN AMOUNT:
                                        <t t-esc="cash_register_balance_start"/>
                                        <t t-esc="company.currency_id.name"/>
                                    </p>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <div class="left_content" style="text-align: left;font-size: 15px;">
                                    <p>CLOSE AMOUNT:
                                        <t t-esc="cash_register_balance_end_real"/>
                                        <t t-esc="company.currency_id.name"/>
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="report_body2" style="margin-top: 30px;">
                    <table style="width: 100%;">
                        <tr>
                            <td>
                                <div class="left_content" style="text-align: left;font-size: 15px;">
                                    <p>TOTAL SALES:</p>
                                </div>
                            </td>
                            <td>................................................</td>
                            <td>
                                <p>
                                    <t t-esc="order_count"/>
                                </p>
                            </td>
                            <td>
                                <div class="right_content" style="text-align: right;font-size: 15px;">
                                    <p>
                                        <span t-esc="total_payments_amount"/>
                                        <t t-esc="company.currency_id.name"/>
                                    </p>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="left_content" style="text-align: left;font-size: 15px;">
                                    <p>TOTAL RETURNS:</p>
                                </div>
                            </td>
                            <td>................................................</td>
                            <td>
                                <p>
                                    <t t-esc="return_order_count"/>
                                </p>
                            </td>
                            <td>
                                <div class="right_content" style="text-align: right;font-size: 15px;">
                                    <p>
                                        <span t-esc="return_order_total"/>
                                        <t t-esc="company.currency_id.name"/>
                                    </p>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="left_content" style="text-align: left;font-size: 15px;">
                                    <p>TOTAL VOIDS:</p>
                                </div>
                            </td>
                            <td>................................................</td>
                            <td>
                                <p>
                                    0.00
                                </p>
                            </td>
                            <td>
                                <div class="right_content" style="text-align: right;font-size: 15px;">
                                    <p>
                                        0.00
                                    </p>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="left_content" style="text-align: left;font-size: 15px;">
                                    <p>TOTAL DISCOUNTS:</p>
                                </div>
                            </td>
                            <td>................................................</td>
                            <td>
                                <p>
                                    <t t-esc="discount_order_count"/>
                                </p>
                            </td>
                            <td>
                                <div class="right_content" style="text-align: right;font-size: 15px;">
                                    <p>
                                        <span t-esc="discount_order_total"/>
                                        <t t-esc="company.currency_id.name"/>
                                    </p>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="left_content" style="text-align: left;font-size: 15px;">
                                    <p>FREE TRANS:</p>
                                </div>
                            </td>
                            <td>................................................</td>
                            <td>
                                <p>
                                    0.00
                                </p>
                            </td>
                            <td>
                                <div class="right_content" style="text-align: right;font-size: 15px;">
                                    <p>
                                        0.00
                                    </p>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td>
                                <p>
                                    ===
                                </p>
                            </td>
                            <td>
                                ===========
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="left_content" style="text-align: left;font-size: 15px;">
                                    <p>SUBTOTAL:</p>
                                </div>
                            </td>
                            <td>................................................</td>
                            <td>
                                <p>
                                    <t t-set="subtotal_count"
                                       t-value="order_count - return_order_count - discount_order_count"/>
                                    <t t-esc="subtotal_count" t-options='{"widget": "float", "precision": 2}'/>
                                </p>
                            </td>
                            <td>
                                <div class="right_content" style="text-align: right;font-size: 15px;">
                                    <p>
                                        <t t-set="subtotal"
                                           t-value="total_payments_amount - return_order_total - discount_order_total"/>
                                        <span t-esc="subtotal" t-options='{"widget": "float", "precision": 2}'/>
                                        <t t-esc="company.currency_id.name"/>
                                    </p>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="left_content" style="text-align: left;font-size: 15px;">
                                    <p>12% VAT:</p>
                                </div>
                            </td>
                            <td>................................................</td>
                            <td>
                                <p>
                                    <t t-esc="tax_order_count"/>
                                </p>
                            </td>
                            <td>
                                <div class="right_content" style="text-align: right;font-size: 15px;">
                                    <p>
                                        <span t-esc="tax_order_total"/>
                                        <t t-esc="company.currency_id.name"/>
                                    </p>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="left_content" style="text-align: left;font-size: 15px;">
                                    <p>NET SALES:</p>
                                </div>
                            </td>
                            <td colspan="2">.......................................................</td>
                            <td>
                                <div class="right_content" style="text-align: right;font-size: 15px;">
                                    <p>
                                        <t t-set="net_sales" t-value="subtotal - tax_order_total"/>
                                        <span t-esc="net_sales" t-options='{"widget": "float", "precision": 2}'/>
                                        <t t-esc="company.currency_id.name"/>
                                    </p>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="left_content" style="text-align: left;font-size: 15px;">
                                    <p>VATABLE SALES:</p>
                                </div>
                            </td>
                            <td>...........................................</td>
                            <td></td>
                            <td>
                                <div class="right_content" style="text-align: right;font-size: 15px;">
                                    <p>
                                        <span t-esc="vatable_order"/>
                                        <t t-esc="company.currency_id.name"/>
                                    </p>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="left_content" style="text-align: left;font-size: 15px;">
                                    <p>VAT-EXAMPT SALES:</p>
                                </div>
                            </td>
                            <td>...........................................</td>
                            <td></td>
                            <td>
                                <div class="right_content" style="text-align: right;font-size: 15px;">
                                    <p>
                                        <span t-esc="zero_vatable_order"/>
                                        <t t-esc="company.currency_id.name"/>
                                    </p>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="left_content" style="text-align: left;font-size: 15px;">
                                    <p>VAT ZERO-RATED SALES:</p>
                                </div>
                            </td>
                            <td>...........................................</td>
                            <td></td>
                            <td>
                                <div class="right_content" style="text-align: right;font-size: 15px;">
                                    <p>
                                        <span t-esc="non_vatable_order"/>
                                        <t t-esc="company.currency_id.name"/>
                                    </p>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="left_content" style="text-align: left;font-size: 15px;">
                                    <p>TOTAL CASH PULL-OUT:</p>
                                </div>
                            </td>
                            <td>...........................................</td>
                            <td></td>
                            <td>
                                <div class="right_content" style="text-align: right;font-size: 15px;">
                                    <p>
                                        0.00
                                    </p>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <div class="right_content" style="text-align: right;font-size: 15px;">
                                    <p>==========</p>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="left_content" style="text-align: left;font-size: 15px;">
                                    <p>CASHIER TOTAL:</p>
                                </div>
                            </td>
                            <td colspan="2">....................................................</td>
                            <td>
                                <div class="right_content" style="text-align: right;font-size: 15px;">
                                    <p>
                                        <span t-esc="subtotal"/>
                                        <t t-esc="company.currency_id.name"/>
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="report_body3 transactions_history" style="margin-top: 20px;">
                    <table style="width: 100%;">
                        <tr>
                            <td colspan="4">
                                <div class="left_content" style="text-align: left;font-size: 15px;">
                                    <p>TRANSACTIONS:</p>
                                </div>
                            </td>
                        </tr>
                        <t t-foreach="transactions_history" t-as="trans">
                            <tr>
                                <td style="width:3%"/>
                                <td style="width:50%">
                                    <div class="left_content" style="text-align: left;font-size: 15px;">
                                        <p>
                                            <t t-esc="trans"/>
                                        </p>
                                    </div>
                                </td>
                                <td style="width:20%;text-align:right;">
                                    <p>
                                        <t t-esc="transactions_history[trans].get('count')"/>
                                        /
                                    </p>
                                </td>
                                <td style="width:37%">
                                    <div class="right_content" style="text-align: right;font-size: 15px;">
                                        <p>
                                            <t t-esc="transactions_history[trans].get('total')"/>
                                            <t t-esc="company.currency_id.name"/>
                                        </p>
                                    </div>
                                </td>
                            </tr>
                        </t>
                    </table>
                </div>
                <div class="report_body4 tender_history" style="margin-top: 20px;">
                    <table style="width: 100%;">
                        <tr>
                            <td colspan="4">
                                <div class="left_content" style="text-align: left;font-size: 15px;">
                                    <p>TENDERS:</p>
                                </div>
                            </td>
                        </tr>
                        <t t-foreach="tender_history" t-as="tender">
                            <tr>
                                <td style="width:3%"/>
                                <td style="width:50%">
                                    <div class="left_content" style="text-align: left;font-size: 15px;">
                                        <p>
                                            <t t-esc="tender"/>
                                        </p>
                                    </div>
                                </td>
                                <td style="width:20%;text-align:right;">
                                    <p>
                                        <t t-esc="tender_history[tender].get('count')"/>
                                        /
                                    </p>
                                </td>
                                <td style="width:37%">
                                    <div class="right_content" style="text-align: right;font-size: 15px;">
                                        <p>
                                            <t t-esc="tender_history[tender].get('total')"/>
                                            <t t-esc="company.currency_id.name"/>
                                        </p>
                                    </div>
                                </td>
                            </tr>
                        </t>
                    </table>
                </div>
                <div class="report_body5 discount_history" style="margin-top: 20px;">
                    <table style="width: 100%;">
                        <tr>
                            <td colspan="4">
                                <div class="left_content" style="text-align: left;font-size: 15px;">
                                    <p>DISCOUNTS:</p>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td style="width:3%"/>
                            <td style="width:50%">
                                <div class="left_content" style="text-align: left;font-size: 15px;">
                                    <p>OPEN AMT</p>
                                </div>
                            </td>
                            <td style="width:20%;text-align:right;">
                                <p>
                                    <t t-esc="discount_order_count"/>
                                    /
                                </p>
                            </td>
                            <td style="width:37%">
                                <div class="right_content" style="text-align: right;font-size: 15px;">
                                    <p>
                                        <t t-esc="discount_order_total"/>
                                        <t t-esc="company.currency_id.name"/>
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="report_body6" style="margin-top: 20px;">
                    <table style="width: 100%;">
                        <tr>
                            <td colspan="2" style="width:50%">
                                <div class="left_content" style="text-align: left;font-size: 15px;">
                                    <p>Item Voids:</p>
                                </div>
                            </td>
                            <td style="width:20%;text-align:right;">
                                <p>
                                    0.00
                                    /
                                </p>
                            </td>
                            <td style="width:30%">
                                <div class="right_content" style="text-align: right;font-size: 15px;">
                                    <p>
                                        0.00
                                        <t t-esc="company.currency_id.name"/>
                                    </p>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" style="width:50%">
                                <div class="left_content" style="text-align: left;font-size: 15px;">
                                    <p>Price Changes:</p>
                                </div>
                            </td>
                            <td style="width:20%;text-align:right;">
                                <p>
                                    <t t-esc="changes_order_count"/>
                                    /
                                </p>
                            </td>
                            <td style="width:30%">
                                <div class="right_content" style="text-align: right;font-size: 15px;">
                                    <p>
                                        <t t-esc="changes_order_total"/>
                                        <t t-esc="company.currency_id.name"/>
                                    </p>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
                <p style="margin-top: 20px;">************************************************************</p>
                <table style="width: 100%;">
                    <tr>
                        <td style="text-align:left;"><p><t t-esc="stop_at" /></p></td>
                        <td style="text-align:right;"><p><t t-esc="stop_time" /></p></td>
                    </tr>
                </table>

            </div>
        </t>
    </template>

    <record id="paperformat_pos_report" model="report.paperformat">
        <field name="name">POS Report Format</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">270</field>
        <field name="page_width">100</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">00</field>
        <field name="margin_bottom">00</field>
        <field name="margin_left">00</field>
        <field name="margin_right">00</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">35</field>
        <field name="dpi">96</field>
    </record>


    <record id="x_pos_report" model="ir.actions.report">
        <field name="name">X Report</field>
        <field name="model">pos.session</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">fg_custom.report_x_pos_report</field>
        <field name="paperformat_id" ref="fg_custom.paperformat_pos_report"/>
    </record>

</odoo>
